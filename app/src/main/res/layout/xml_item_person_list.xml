<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/user_image_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_user_default_image" />

        <TextView
            android:id="@+id/tv_user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_image_header"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_image_header"
            android:text="111"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_6" />

        <ImageView
            android:id="@+id/user_image_renz"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_user_nick"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@mipmap/icon_new_renzheng" />

        <TextView
            android:id="@+id/tv_user_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/user_image_header"
            android:text="111"
            android:textColor="@color/home_tab_title"
            android:textSize="@dimen/textsize_5" />


        <ImageView
            android:id="@+id/user_image_gender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/tv_user_nick"
            android:layout_below="@+id/tv_user_msg"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>

</LinearLayout>