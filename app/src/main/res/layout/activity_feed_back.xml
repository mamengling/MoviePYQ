<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_feed_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_view_bg"
        android:padding="15dp"
        android:text="请选择您要反馈的问题类型"
        android:textColor="@color/home_text_color"
        android:textSize="@dimen/textsize_7" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="15dp"
        android:verticalSpacing="15dp"
        android:layout_margin="15dp"
        android:numColumns="3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/content_view_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edt_back_white"
        android:orientation="vertical"
        android:padding="5dp">

        <EditText
            android:id="@+id/editTextt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:gravity="start"
            android:hint="请写下您的宝贵意见..."
            android:minLines="8"
            android:padding="5dp"
            android:textColor="@color/home_name"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="100字以内"
            android:textSize="@dimen/textsize_6" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/x_button_seleter_2"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_7" />
</LinearLayout>