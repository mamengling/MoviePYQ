<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.movie.mling.movieapp.utils.widget.AlignTextView
        android:id="@+id/tv_ticai"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_view_type"
        android:layout_below="@+id/tv_view_type"
        app:textAlign="题        材："
        android:textColor="@color/home_text_color"
        android:textSize="@dimen/textsize_6"/>


    <TextView
        android:id="@+id/tv_ticai_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_view_type"
        android:layout_below="@+id/tv_view_type"
        android:gravity="left"
        android:lines="1"
        android:text="题        材："
        android:textColor="@color/home_name"
        android:textSize="@dimen/textsize_6"/>
</LinearLayout>
