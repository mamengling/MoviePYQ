<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/father"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobutton0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:clickable="true"
                android:drawableTop="@drawable/radio_tonggao"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="通告"
                android:textColor="@drawable/xml_index_textcolor"
                android:textSize="@dimen/textsize_6" />

            <RadioButton
                android:id="@+id/radiobutton1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:clickable="true"
                android:drawableTop="@drawable/radio_yanyuan"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="演员"
                android:textColor="@drawable/xml_index_textcolor"
                android:textSize="@dimen/textsize_6" />

            <com.movie.mling.movieapp.utils.widget.TipRadioButton
                android:id="@+id/radiobutton_zixun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:clickable="true"
                android:drawableTop="@drawable/radio_zixun"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="资讯"
                android:textColor="@drawable/xml_index_textcolor"
                android:textSize="@dimen/textsize_6" />

            <com.movie.mling.movieapp.utils.widget.TipRadioButton
                android:id="@+id/radiobutton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:clickable="true"
                android:drawableTop="@drawable/radio_message"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="消息"
                android:textColor="@drawable/xml_index_textcolor"
                android:textSize="@dimen/textsize_6" />


            <RadioButton
                android:id="@+id/radiobutton3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:clickable="true"
                android:drawableTop="@drawable/radio_user"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="我的"
                android:textColor="@drawable/xml_index_textcolor"
                android:textSize="@dimen/textsize_6" />
        </RadioGroup>
    </FrameLayout>
</LinearLayout>
